{
    "name": "jeffersongoncalves/jira-cli",
    "description": "A Jira Cloud CLI built with Laravel Zero.",
    "keywords": ["jira", "cli", "atlassian", "laravel-zero", "console"],
    "homepage": "https://github.com/jeffersongoncalves/jira-cli",
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/jeffersongoncalves/jira-cli/issues",
        "source": "https://github.com/jeffersongoncalves/jira-cli"
    },
    "authors": [
        {
            "name": "Jefferson Goncalves",
            "email": "jeffersongoncalves@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "guzzlehttp/guzzle": "^7.9",
        "laravel-zero/framework": "^12.0.2",
        "laravel/pint": "^1.25.1",
        "mockery/mockery": "^1.6.12",
        "pestphp/pest": "^3.8.4|^4.1.2",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "bin": ["builds/jira"],
    "scripts": {
        "build": "@php jira app:build jira --build-version=$(git describe --tags --abbrev=0 2>/dev/null || echo 'dev')",
        "test:unit": "./vendor/bin/pest --parallel",
        "test:lint": "./vendor/bin/pint --test",
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=256M",
        "test": ["@test:unit", "@test:lint"]
    }
}
